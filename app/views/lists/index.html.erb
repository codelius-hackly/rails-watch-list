<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1>Yodas movie lists</h1>
    <%= link_to "Add list", new_list_path, class: "btn btn-outline-primary" %>
  </div>
  <% @lists.each do |list| %>
    <%= link_to list_path(list) do %>
      <div class="card w-75">
        <div class="card-body">
          <h5 class="card-title"><%= list.name %></h5>
          <p class="card-text">...containing <%= list.movies.count %> movies</p>
        </div>
      </div>
    <% end %>
  <% end %>
</div>
