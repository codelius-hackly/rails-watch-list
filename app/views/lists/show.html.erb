<div class="container">
  <div class="d-flex justify-content-between align-items-center">
    <h1><%= @list.name %></h1>
    <%= link_to "Add bookmark", new_list_bookmark_path(@list), class: "btn btn-outline-primary" %>
  </div>
  <div class="row row-cols-1 row-cols-md-3 g-4">
    <% @list.bookmarks.each do |bookmark| %>
      <div class="col">
        <div class="card">
          <%= image_tag bookmark.movie.poster_url, class: "card-img-top" %>
          <div class="card-body">
            <h5 class="card-title"><%= bookmark.movie.title %></h5>
            <p class="card-text"><strong>Overview:</strong></p>
            <p class="card-text"><%= bookmark.movie.overview %></p>
            <p class="card-text"><strong>Comment from Master Yoda:</strong></p>
            <p class="card-text"><%= bookmark.comment %></p>
            <div class="d-flex justify-content-between">
              <p class="card-text"><%= bookmark.movie.rating %> / 10</p>
              <%= link_to "delete", bookmark_path(bookmark), class: "btn btn-outline-primary", data: { turbo_method: :delete, turbo_confirm: "Are you sure?" } %>
            </div>
          </div>
        </div>
      </div>
    <% end %>
  </div>
</div>
